module static-semantics

imports

  signatures/-

rules

  init ^ (s) := new s.

  // TODO check if all tokens are defined
  // TODO check if start token is a rule
  // TODO check precedence rules

  [[ Grammar(_, rules, _) ^ (s) ]] :=
    Map1[[ rules ^ (s) ]].

  [[ Rule(left, rs) ^ (s) ]] :=
    Map1[[ rs ^ (s) ]].

  [[ RHS(ids) ^ (s) ]] := true.
